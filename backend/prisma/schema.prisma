generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id    Int     @id @default(autoincrement())
  email String  @unique
  name  String?
}

model Candidate {
  id          String   @id @default(uuid())
  nombre      String
  apellido    String
  email       String   @unique
  telefono    String?
  direccion   String?
  educacion   String
  experiencia String
  cv_path     String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}