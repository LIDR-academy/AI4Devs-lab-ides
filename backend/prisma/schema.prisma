datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Candidate {
  id              Int      @id @default(autoincrement())
  first_name      String
  last_name       String
  email           String   @unique
  phone_number    String
  address         String
  education       String
  work_experience String
  cv              String?  // Optional field for CV (PDF or DOCX)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}
