{
    "name": "backend",
    "version": "1.0.0",
    "description": "",
    "main": "dist/index.js",
    "scripts": {
        "start": "ts-node src/server.ts",
        "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
        "build": "tsc",
        "test": "NODE_ENV=test jest --detectOpenHandles --forceExit",
        "test:watch": "NODE_ENV=test jest --watch",
        "test:coverage": "NODE_ENV=test jest --coverage",
        "migration:generate": "npm run typeorm migration:generate -- -d src/infrastructure/database/config/database.ts",
        "migration:run": "npm run typeorm migration:run -- -d src/infrastructure/database/config/database.ts",
        "migration:revert": "npm run typeorm migration:revert -- -d src/infrastructure/database/config/database.ts",
        "prisma:init": "npx prisma init",
        "prisma:generate": "npx prisma generate",
        "start:prod": "npm run build && npm start",
        "typeorm": "typeorm-ts-node-commonjs"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "dependencies": {
        "@prisma/client": "^5.13.0",
        "class-transformer": "^0.5.1",
